{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "indentWidth": 2
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noInvalidUseBeforeDeclaration": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noPrototypeBuiltins": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}