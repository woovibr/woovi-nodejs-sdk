{
    "$schema": "https://biomejs.dev/schemas/1.6.0/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "semicolons": "always",
        "indentWidth": 2
      }
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true,
        "correctness": {
          "noInvalidUseBeforeDeclaration": "off"
        },
        "suspicious": {
          "noExplicitAny": "warn"
        }
      }
    }
  }